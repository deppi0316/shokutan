<header>
  <div class="header">
    <div class="header-center">
      <div class="header-second-left">
        <div class="header-left-content">
          <p class="header-catchcopy">おうちでお店ごはん</P>
          <h1><%= link_to "食たん" ,root_path , class:"title"%> </h1>
        </div>
      </div>
      <div class="header-right">
        <nav class="nav">
          <ul class = "menu-group">
            <% if user_signed_in? %>
              <li><%= link_to "新規記事投稿", new_post_path,class:"menu-item"%></li>
              <li><%= link_to current_user.shop_name, user_path(current_user.id),class:"menu-item" %></li>
              <li><%= link_to "ログアウト" , destroy_user_session_path,class:"menu-item", method: :delete %></li>
            <% else %>
              <li><%= link_to "新規登録", new_user_registration_path,class:"menu-item" %></li>
              <li><%= link_to "ログイン", new_user_session_path,class:"menu-item" %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
