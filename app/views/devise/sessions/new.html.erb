<%= render "shared/header_second" %>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>

<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン情報入力
    </h1>
  </div>

  <div class="form-content">

    <div class="form-field">
      <div class="form-text-wrap">
        <label class="form-text">メールアドレス</label>
      </div>
      <%= f.email_field :email ,class:"input-session-field" , autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-field">
      <div class="form-text-wrap">
        <label class="form-text">パスワード</label>
      </div>
      <%= f.password_field :password ,class:"input-session-field", autocomplete: "current-password" %>
    </div>

    <div class="register-btn">
        <%= f.submit "ログイン",class:"regist-btn" %>
      </div>
  <% end %>

<%= render "shared/footer" %>