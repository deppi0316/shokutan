<%= render "shared/header_second" %>

<%= form_with model:@user, url: user_registration_path, class:"registration-main",local:true do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        お店情報入力
      </h1>
    </div>

    <div class="form-content">

      <div class="form-field">
        <div class="form-text-wrap">
          <label class="form-text">店舗の名前</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :shop_name,class:"input-field", placeholder:"(例)shokutan店舗" %>
      </div>

      <div class="form-field">
        <div class="form-text-wrap">
          <label class="form-text">オーナーの氏名</label>
        </div>
        <%= f.text_field :owner_name,class:"input-field", placeholder:"(例)shokutan太郎" %>
      </div>

      <div class="form-field">
        <div class="form-text-wrap">
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email,class:"input-field", placeholder:"(例)shokutan@mail.com", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-field">
        <div class="form-text-wrap">
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>        
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password,class:"input-field", placeholder:"パスワード", autocomplete: "new-password" %>
      </div>

      <div class="form-field">
        <div class="form-text-wrap">
          <label class="form-text">パスワード(確認)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation,class:"input-field", placeholder:"パスワード再入力", autocomplete: "new-password" %>
      </div>

      <div class="register-btn">
        <%= f.submit "次へ",class:"regist-btn" %>
      </div>
    </div>

  </div>

<% end %>

<%= render "shared/footer" %>